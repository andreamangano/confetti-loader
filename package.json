{
  "name": "confetti-loader",
  "version": "0.0.6",
  "description": "Loader to get the speaker deck data from config files.",
  "scripts": {
    "clean:bin": "rimraf ./bin/*",
    "clean:lib": "rimraf ./lib/*",
    "lint": "./node_modules/.bin/eslint ./src",
    "compile:bin": "npm run clean:bin && babel -d bin/ src/bin/",
    "compile:lib": "npm run clean:lib && babel -d lib/ src/lib/",
    "compile": "npm run compile:bin && npm run compile:lib",
    "test": "./node_modules/.bin/mocha --compilers js:babel-core/register --require babel-polyfill"
  },
  "main": "./lib/loader.js",
  "bin": {
    "confetti-loader": "./bin/loader.js"
  },
  "babel": {
    "presets": [
      "es2017",
      "es2015"
    ]
  },
  "author": "Andrea Mangano <andreaman87@gmail.com> (http://andreamangano.com)",
  "license": "ISC",
  "files": [
    "bin/",
    "lib/"
  ],
  "keywords": [
    "presentation",
    "confetti",
    "slidedeck",
    "slides",
    "talk",
    "slideshow",
    "speaker",
    "website",
    "loader"
  ],
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2017": "^6.16.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "commander": "^2.9.0",
    "eslint": "^3.10.2",
    "eslint-config-xo-space": "^0.15.0",
    "eslint-plugin-babel": "^3.3.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.1.2",
    "rimraf": "^2.2.8",
    "sinon": "^1.17.6"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "lodash": "^4.17.2",
    "path": "^0.12.7",
    "tv4": "^1.2.7",
    "util": "^0.10.3",
    "yamljs": "^0.2.8",
    "yargs": "^6.4.0"
  }
}
